<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="{{ site.authorName }}">
    <meta name="description" content="{{ site.description }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ site.imgDir }}favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ site.imgDir }}favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ site.imgDir }}favicons/favicon-16x16.png">
    <link rel="manifest" href="{{ site.imgDir }}favicons/site.webmanifest">
    <link rel="mask-icon" href="{{ site.imgDir }}favicons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <link rel="stylesheet" type="text/css" href="/assets/main.css" />
    <script defer src="/assets/alpine.js"></script>
    <script src="/assets/main.js"></script>
    <script src="/assets/main.js"></script>
  </head>
  <body>
    {% include "../components/header.njk" %}
    <main class="u-container u-mb-10">
      {{ content | safe }}
    </main>
    {% include "../components/footer.njk" %}
  </body>
</html>
